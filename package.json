{
	"name": "game-dict",
	"version": "0.0.1",
	"description": "Management tools of game words IME dictionary",
	"type": "module",
	"main": "dist/main/main.js",
	"scripts": {
		"build": "tsc && npm run copy-assets",
		"copy-assets": "cp -r src/renderer/index.html src/renderer/styles dist/renderer/ && mkdir -p dist/renderer/scripts && cp src/renderer/scripts/main.js dist/renderer/scripts/",
		"dev": "tsc --watch",
		"electron": "electron .",
		"electron:dev": "npm run build && electron .",
		"dist": "npm run build && electron-builder",
		"dist:mac": "npm run build && electron-builder --mac",
		"dist:win": "npm run build && electron-builder --win",
		"dist:linux": "npm run build && electron-builder --linux",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:clean": "rm -rf test-data",
		"test:e2e": "npm run build && playwright test",
		"test:e2e:headed": "npm run build && playwright test --headed",
		"test:e2e:ui": "npm run build && playwright test --ui"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"volta": {
		"node": "22.16.0"
	},
	"engines": {
		"node": ">=22.16.0"
	},
	"dependencies": {
		"better-sqlite3": "^11.10.0",
		"csv-parse": "^5.6.0",
		"csv-stringify": "^6.5.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.2",
		"@playwright/test": "^1.53.1",
		"@types/better-sqlite3": "^7.6.13",
		"@vitest/ui": "^3.2.4",
		"electron": "^36.5.0",
		"electron-builder": "^26.0.12",
		"playwright": "^1.53.1",
		"prettier": "3.5.3",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"build": {
		"appId": "com.gamedict.app",
		"productName": "IME辞書管理ツール",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/**/*",
			"src/renderer/**/*",
			"package.json"
		],
		"mac": {
			"category": "public.app-category.utilities",
			"target": "dmg"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage"
		}
	}
}
