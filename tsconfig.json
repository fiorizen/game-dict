{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"test-data",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
